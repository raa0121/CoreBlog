@model CoreBlog.Models.Article

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <h4>Article</h4>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger" />
    </div>
    <div class="form-group">
        <label asp-for="Content" class="control-label"></label>
        <div id="mdeditor">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <textarea asp-for="Content" class="form-control" v-model="markdownArticle" rows="20"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="panel panel-default">
                        <div class="panel-body" v-html="compiledArticle">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="PostedAt" class="control-label"></label>
        <input asp-for="PostedAt" class="form-control" />
        <span asp-validation-for="PostedAt" class="text-danger" />
    </div>
    <div class="form-group">
        <div class="checkbox">
            <label asp-for="IsPublished">
                <input asp-for="IsPublished" /> Publish
            </label>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
